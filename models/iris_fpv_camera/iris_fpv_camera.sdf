<?xml version='1.0'?>
<sdf version='1.7'>
  <model name='iris_fpv_camera'>

    <include>
      <uri>model://iris</uri>
    </include>

    <include>
      <uri>model://cameras/fpv_camera</uri>
      <pose>0 0 0 0 0 0</pose>
    </include>
    <joint name="fpv_cam_joint" type="fixed">
      <child>fpv_camera::link</child>
      <parent>iris::base_link</parent>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <upper>0</upper>
          <lower>0</lower>
        </limit>
      </axis>
    </joint>

  </model>
</sdf>
